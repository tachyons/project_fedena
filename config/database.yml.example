default: &default
  adapter: mysql2
  encoding: utf8
  init_command: "SET @@SESSION.sql_mode = ''"
  port: <%= ENV['MYSQL_PORT'] || 3306 %>
  host: <%= ENV['MYSQL_HOST'] || 'localhost' %>
  username: <%= ENV['MYSQL_USER'] || 'root' %>
  password: <%= ENV['MYSQL_PASSWORD'] || '' %>

development:
  <<: *default
  database: fedena

test: &test
  <<: *default
  database: fedena_test

production:
  <<: *default
  database: fedena_production
cucumber:
  <<: *test
